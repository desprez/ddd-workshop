<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.1"
	xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_1.xsd">

	<entity class="com.ddd.training.application.Currency"
		name="Currency" access="FIELD">
		<table name="CURRENCY" />

		<attributes>
			<basic name="name" length="50">
				<column name="NAME" />
			</basic>
			<basic name="isoCode" length="3" >
				<column name="ISO_CODE" />
			</basic>
		</attributes>
	</entity>

</entity-mappings>